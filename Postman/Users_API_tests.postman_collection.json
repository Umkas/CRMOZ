			"item": [
				{
					"name": "Users",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"//should be 200 status code\r",
									"pm.test(\"Status code is 200\", () => {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"//parse JSON and check that the array is not empty\r",
									"const users = pm.response.json();\r",
									"\r",
									"pm.test(\"Response is non-empty array\", () => {\r",
									"    pm.expect(users).to.be.an(\"array\");\r",
									"    pm.expect(users.length).to.be.above(0);\r",
									"});\r",
									"\r",
									"//get the first user and retrieve id, name and email fields\r",
									"const user = users[0];\r",
									" \r",
									"pm.test(\"User has required fields: id, name, email\", () => {\r",
									"    pm.expect(user).to.have.property(\"id\");\r",
									"    pm.expect(user).to.have.property(\"name\");\r",
									"    pm.expect(user).to.have.property(\"email\");\r",
									"});"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users",
							"host": [
